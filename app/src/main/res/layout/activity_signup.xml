<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#dc143c"
            android:text="Welcome to"
            android:textColor="@color/white"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/txtNT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NT money"
            android:textColor="#dc143c"
            android:textSize="10pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="Username:" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="ex: Vitor Hugo"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="Email:" />
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="ex: hello@gmail.com"
        android:inputType="textEmailAddress" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="Address:" />
        <Spinner
            android:id="@+id/spinnerProvince"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="Date of birth:" />
    <EditText
        android:id="@+id/edtDofB"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="ex: 03/03/2003"
        android:inputType="date" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="Gender:" />
    <RadioGroup
        android:id="@+id/grRdGender"
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdMale"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="male"
            android:textSize="20dp"></RadioButton>

        <RadioButton
            android:id="@+id/rdFemale"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:text="female"
            android:textSize="20dp"></RadioButton>
    </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="Password:" />
    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="ex: hjadaui2D@!dsa."
        android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="Confirm password:" />
    <EditText
        android:id="@+id/edtRePass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="ex: hjadaui2D@!dsa."
        android:inputType="textPassword" />
    </LinearLayout>
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="150dp"
        android:backgroundTint="#dc143c"
        android:text="Create account" />

    <Button
        android:id="@+id/btnTransferToSigninForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#dc143c"
        android:layout_marginTop="50dp"
        android:text="Back to login!"
        android:textColor="@color/white" />

</LinearLayout>