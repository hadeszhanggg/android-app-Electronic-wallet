<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragment.HomeFragment">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/oval_shape"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#dc143c"
        android:textColor="@color/white"
        android:text="Welcome to NT Wallet"
        android:textSize="30dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:id="@+id/customBtnShow"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnShow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/eye_open" />

            <TextView
                android:id="@+id/txtShow"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Show"
                android:gravity="center"
                android:textSize="8pt" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtSoDu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/customBtnShow"
            android:background="@color/white"
            android:hint="*****"
            android:gravity="center"
            android:textSize="10pt" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dc143c"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btnDeposit"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deposit_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deposit"
                    android:gravity="center"
                    android:textSize="10pt"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnListBill"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bills"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="List bills"
                    android:textSize="10pt"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:id="@+id/btnVouchers"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/voucher_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vouchers"
                    android:gravity="center"
                    android:textSize="10pt"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:id="@+id/layout4"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btnInvest"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/invest_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Invest"
                    android:gravity="center"
                    android:textSize="10pt"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:id="@+id/btnTransactions"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/transaction_list"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Transactions"
                    android:textSize="10pt"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:id="@+id/btnTransfer"
                android:background="@color/white"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/transfer_money"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transfer"
                    android:gravity="center"
                    android:textSize="10pt"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>