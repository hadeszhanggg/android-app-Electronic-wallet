<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="white"
    tools:context=".fragment.HomeFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to NT Wallet"
        android:textSize="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnShow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/eye_open"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show"
                android:textSize="8pt"/>
        </LinearLayout>
        <TextView
            android:id="@+id/soDu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="*****"
            android:gravity="center"
            android:textSize="10pt"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6495ed"
        android:id="@+id/layout1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btnDeposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/deposit_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deposit"
                android:gravity="center"
                android:textSize="10pt"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:id="@+id/layout2"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btnListBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bill"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="List bills"
                android:textSize="10pt"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:id="@+id/layout3"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btnVouchers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/voucher_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vouchers"
                android:gravity="center"
                android:textSize="10pt"
                android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>